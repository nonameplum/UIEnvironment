."}]}]}],"schemaVersion":{"major":0,"minor":3,"patch":0},"sections":[],"variants":[{"paths":["\/documentation\/uienvironment\/uienvironment"],"traits":[{"interfaceLanguage":"swift"}]}],"identifier":{"url":"doc:\/\/com.plum.UIEnvironment\/documentation\/UIEnvironment\/UIEnvironment","interfaceLanguage":"swift"},"abstract":[{"type":"text","text":"A property wrapper that reads a value from a UIKit view’s environment."}],"kind":"symbol","metadata":{"fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"UIEnvironment"}],"title":"UIEnvironment","roleHeading":"Structure","role":"symbol","symbolKind":"struct","externalID":"s:13UIEnvironmentAAV","modules":[{"name":"UIEnvironment"}],"navigatorTitle":[{"kind":"identifier","text":"UIEnvironment"}]},"hierarchy":{"paths":[["doc:\/\/com.plum.UIEnvironment\/documentation\/UIEnvironment"]]},"topicSections":[{"title":"Initializers","identifiers":["doc:\/\/com.plum.UIEnvironment\/documentation\/UIEnvironment\/UIEnvironment\/init(_:)"]},{"title":"Instance Properties","identifiers":["doc:\/\/com.plum.UIEnvironment\/documentation\/UIEnvironment\/UIEnvironment\/wrappedValue"]}],"references":{"doc://com.plum.UIEnvironment/documentation/UIEnvironment/UIEnvironmentValues":{"role":"symbol","title":"UIEnvironmentValues","fragments":[{"kind":"keyword","text":"struct"},{"kind":"text","text":" "},{"kind":"identifier","text":"UIEnvironmentValues"}],"abstract":[{"type":"text","text":"A collection of environment values propagated through a view\/view controller hierarchy."}],"identifier":"doc:\/\/com.plum.UIEnvironment\/documentation\/UIEnvironment\/UIEnvironmentValues","kind":"symbol","type":"topic","navigatorTitle":[{"kind":"identifier","text":"UIEnvironmentValues"}],"url":"\/documentation\/uienvironment\/uienvironmentvalues"},"doc://com.plum.UIEnvironment/documentation/UIEnvironment/UIEnvironmentUpdating":{"role":"symbol","title":"UIEnvironmentUpdating","fragments":[{"kind":"keyword","text":"protoc